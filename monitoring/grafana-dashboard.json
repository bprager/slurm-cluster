{
    "dashboard": {
        "id": null,
        "title": "Slurm Cluster Overview",
        "tags": [
            "slurm",
            "cluster"
        ],
        "style": "dark",
        "timezone": "browser",
        "panels": [
            {
                "title": "Cluster Status",
                "type": "stat",
                "targets": [
                    {
                        "expr": "slurm_nodes_total",
                        "legendFormat": "Total Nodes"
                    },
                    {
                        "expr": "slurm_nodes_idle",
                        "legendFormat": "Idle Nodes"
                    },
                    {
                        "expr": "slurm_nodes_allocated",
                        "legendFormat": "Allocated Nodes"
                    }
                ],
                "gridPos": {
                    "h": 8,
                    "w": 12,
                    "x": 0,
                    "y": 0
                }
            },
            {
                "title": "Job Queue",
                "type": "graph",
                "targets": [
                    {
                        "expr": "slurm_queue_pending",
                        "legendFormat": "Pending Jobs"
                    },
                    {
                        "expr": "slurm_queue_running",
                        "legendFormat": "Running Jobs"
                    }
                ],
                "gridPos": {
                    "h": 8,
                    "w": 12,
                    "x": 12,
                    "y": 0
                }
            },
            {
                "title": "Node CPU Usage",
                "type": "graph",
                "targets": [
                    {
                        "expr": "100 - (avg by (instance) (rate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)",
                        "legendFormat": "{{instance}}"
                    }
                ],
                "gridPos": {
                    "h": 8,
                    "w": 24,
                    "x": 0,
                    "y": 8
                }
            },
            {
                "title": "Node Memory Usage",
                "type": "graph",
                "targets": [
                    {
                        "expr": "(1 - (node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes)) * 100",
                        "legendFormat": "{{instance}}"
                    }
                ],
                "gridPos": {
                    "h": 8,
                    "w": 24,
                    "x": 0,
                    "y": 16
                }
            }
        ],
        "time": {
            "from": "now-1h",
            "to": "now"
        },
        "refresh": "30s"
    }
}
